<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @tournament.name %>
</p>

<ol>
  <% @tournament.players.to_a.each do |p| %>
    <li>
      <%= p.name %>
    </li>
  <% end %>
</ol>

<%= button_to 'Generate First Round', action: "generate_start" %>

<% if @tournament.current_round != "nil" %>
  <%= render 'round' %>
<% end %>

  

<%= link_to 'Edit', edit_tournament_path(@tournament) %> |
<%= link_to 'Back', tournaments_path %>
