  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>Listing Tournaments</h1>
          <table>
            <thead>
              <tr>
              <th>Name</th>
              <th></th>
              <th></th>
              </tr>
              </thead>

              <tbody>
              <% @tournaments.each do |tournament| %>
                <tr>
                <td><%= link_to tournament.name, tournament %></td>
                <td><%= link_to 'Edit', edit_tournament_path(tournament) %></td>
                <td><%= link_to 'Destroy', tournament, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
            <br>
            <strong><%= link_to 'New Tournament', new_tournament_path %></strong>
      </div>
    </div>
  </div>
